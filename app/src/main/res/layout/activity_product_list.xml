<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home1">

    <!-- Layout chứa nội dung chính -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/user_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80000000"
            app:title="E-Commerce"
            android:textSize="60sp"
            app:titleTextColor="#FD1503"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Banner quảng cáo -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/bannerViewPager"
                    android:layout_width="363dp"
                    android:layout_height="137dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#80FFFFFF"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Thanh tìm kiếm -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#80FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:iconifiedByDefault="false"
                        android:queryHint="Tìm kiếm sản phẩm..."
                        android:textColorHint="#B0B0B0"
                    app:searchIcon="@drawable/search"
                    app:iconTint="#FFFFFF" />
                </androidx.cardview.widget.CardView>

                <!-- Thanh icon Giỏ hàng và Yêu thích -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <ImageButton
                        android:id="@+id/btnChat"
                        android:layout_width="49dp"
                        android:layout_height="52dp"
                        android:background="@null"
                        android:contentDescription="Box Chat"
                        android:src="@drawable/chat" />

                    <ImageButton
                        android:id="@+id/btnNotification"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:contentDescription="Thông báo chung"
                        android:src="@drawable/notifications"
                        app:tint="#F40505" />

                    <ImageButton
                        android:id="@+id/btnFavorite"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:contentDescription="Yêu thích"
                        android:src="@drawable/favorite_like"
                        app:tint="#F40505" />

                    <ImageButton
                        android:id="@+id/btnCart"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:contentDescription="Giỏ hàng"
                        android:src="@drawable/cart"
                        app:tint="#F40505" />
                </LinearLayout>

                <!-- Bộ lọc -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#80FFFFFF"
                    android:padding="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinnerCategory"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#80FFFFFF" />

                        <Spinner
                            android:id="@+id/spinnerSort"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#80FFFFFF" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Nhập giá -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#80FFFFFF"
                    android:padding="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/minPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Giá tối thiểu"
                            android:textColorHint="#000000"
                            android:inputType="numberDecimal"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/maxPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Giá tối đa"
                            android:textColorHint="#000000"
                            android:inputType="numberDecimal"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Nút áp dụng -->
                <Button
                    android:id="@+id/btnFilter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ban_background"
                    android:text="Áp dụng"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textAllCaps="false" />

                <!-- Danh sách sản phẩm -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"
                    android:text="Danh sách sản phẩm"
                    android:textColor="#FD1503"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#80FFFFFF"
                    android:padding="8dp"
                    app:spanCount="2" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/user_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#80000000"
        app:itemTextColor="#FFFFFF"
        app:itemIconTint="#FFFFFF"
        app:menu="@menu/user_menu" />

</androidx.drawerlayout.widget.DrawerLayout>