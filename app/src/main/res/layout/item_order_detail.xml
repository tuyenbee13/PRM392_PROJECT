<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/d_imgProduct"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/acer_nitro5" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="18dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/d_txtProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/d_txtProductDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả sản phẩm"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/d_txtQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: 1"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:layout_gravity="center">
    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@android:color/holo_red_dark" />

        <TextView
        android:id="@+id/d_txtProductTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.450.000 VNĐ"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@android:color/holo_red_dark" />
    </LinearLayout>
</LinearLayout>
