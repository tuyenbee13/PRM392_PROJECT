<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextColor">@android:color/black</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">50sp</item> <!-- Tăng kích thước chữ -->
        <item name="android:fontFamily">sans-serif</item> <!-- Font tùy chọn -->
        <item name="android:textColor">#FD1503</item> <!-- Màu chữ -->
    </style>


    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

        <!-- Định nghĩa kiểu tùy chỉnh cho SearchView -->
        <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
            <item name="android:textColorHint">#B0B0B0</item> <!-- Màu văn bản gợi ý -->
            <item name="android:textColor">#FFFFFF</item>    <!-- Màu văn bản -->
        </style>
</resources>
